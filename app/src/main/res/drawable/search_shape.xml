<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="12dp" />
<!--            <stroke android:width="1dp" android:color="#448aac" />-->
            <gradient android:angle="-45" android:startColor="#88D4E6" android:endColor="#b6dce5"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="12dp" />
<!--            <stroke android:width="1dp" android:color="##448aac" />-->
            <solid android:color="#448aac"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="12dp" />
<!--            <stroke android:width="1dp" android:color="#448aac" />-->
            <gradient android:angle="-90" android:startColor="#b6dce5" android:endColor="#88D4E6" />
        </shape>
    </item>
</selector>